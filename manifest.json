{
  "manifest_version": 3,
  "name": "Vani: Indic TTS",
  "version": "1.0.0",
  "description": "Fast, natural Text-to-Speech for Indian languages. Powered by Sarvam AI.",

  "permissions": [
    "contextMenus",
    "storage",
    "offscreen",
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Vani: Indic TTS"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/floating-player.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "host_permissions": ["https://api.sarvam.ai/*"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
